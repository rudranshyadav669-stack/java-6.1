// Student.java

import java.io.Serializable;

public class Student implements Serializable {
    int studentID;
    String name;
    double grade;

    public Student(int studentID, String name, double grade) {
        this.studentID = studentID;
        this.name = name;
        this.grade = grade;
    }
}

// StudentSerializer.java

import java.io.*;

public class StudentSerializer {
    public static void main(String[] args) throws Exception {
        Student student = new Student(101, "Alice", 91.2);

        ObjectOutputStream out = new ObjectOutputStream(new FileOutputStream("student.dat"));
        out.writeObject(student);
        out.close();

        ObjectInputStream in = new ObjectInputStream(new FileInputStream("student.dat"));
        Student s = (Student) in.readObject();
        in.close();

        System.out.println("Student ID: " + s.studentID);
        System.out.println("Name: " + s.name);
        System.out.println("Grade: " + s.grade);
    }
}
